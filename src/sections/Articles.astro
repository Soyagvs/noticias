---
import { getCollection } from 'astro:content';
import Card from "../components/Card.astro";

// Obtener las noticias
const news = await getCollection('news');

//console.log(news); // Agrega esto para verificar si las noticias estÃ¡n llegando

// Ordenar por fecha y tomar las 3 Ãºltimas
const latestNews = news
  .sort((a, b) => +new Date(b.data.date) - +new Date(a.data.date))
  .slice(0, 3);
---

<section class="flex flex-wrap max-w-7xl mx-auto gap-5 justify-center items-center mt-20">
  {latestNews.map((post) => (
    <Card title={post.data.title} date={post.data.date} image={post.data.image} />
  ))}
</section>
